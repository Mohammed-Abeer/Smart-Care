<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/customersignin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Sign In As Customer" />

    <Button
        android:id="@+id/customersignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up As Customer" />

    <Button
        android:id="@+id/managersignin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In As Manager" />

    <Button
        android:id="@+id/managersignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up As Manager" />





</LinearLayout>